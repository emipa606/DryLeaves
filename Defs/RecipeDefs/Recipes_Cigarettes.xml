<?xml version="1.0" encoding="utf-8" ?>
<Defs>


	<RecipeDef Name="RollCigarPack">
		<defName>RollCigarPack</defName>
		<label>make cigar pack</label>
		<description>Makes five cigars for your colonists' nicotine-infused habits.</description>
		<jobString>Rolling cigars</jobString>
		<workSpeedStat>DrugProductionSpeed</workSpeedStat>
		<workAmount>350</workAmount>
		<requiredGiverWorkType>Crafting</requiredGiverWorkType>
		<effectWorking>Cook</effectWorking>
		<soundWorking>Recipe_CookMeal</soundWorking>
		<ingredients>
			<li>
				<filter>
					<thingDefs>
						<li>DriedLeavesTobacco</li>
					</thingDefs>
				</filter>
				<count>15</count>
			</li>
		</ingredients>
		<products>
			<TobaccoCigar>5</TobaccoCigar>
		</products>
		<fixedIngredientFilter>
			<categories>
				<li>PlantMatter</li>
			</categories>
			<thingDefs>
				<li>DriedLeavesTobacco</li>
			</thingDefs>
		</fixedIngredientFilter>
		<defaultIngredientFilter>
			<categories>
				<li>PlantMatter</li>
			</categories>
			<thingDefs>
				<li>DriedLeavesTobacco</li>
			</thingDefs>
		</defaultIngredientFilter>
		<workSkill>Crafting</workSkill>
		<recipeUsers>
			<li>CraftingSpot</li>
		</recipeUsers>	
	</RecipeDef>


