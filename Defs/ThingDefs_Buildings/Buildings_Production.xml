<?xml version="1.0" encoding="utf-8" ?>
<Defs>

	<ThingDef ParentName="BuildingBase">
		<defName>DryingRack</defName>
		<label>drying rack</label>
        <description>Drying rack used for drying smokeleaf and tobacco leaves.</description>
		<graphicData>
			<texPath>Things/Building/Production/LeafDryingRack</texPath>
			<graphicClass>Graphic_Multi</graphicClass>
			<drawSize>(2,1)</drawSize>
		</graphicData>
        <minifiedDef>MinifiedThing</minifiedDef>
		<altitudeLayer>Building</altitudeLayer>
		<passability>PassThroughOnly</passability>
		<fillPercent>0.45</fillPercent>
		<pathCost>60</pathCost>
        <thingCategories>
            <li>BuildingsProduction</li>
        </thingCategories>
		<statBases>
			<WorkToBuild>600</WorkToBuild>
			<Mass>10</Mass>
			<MaxHitPoints>100</MaxHitPoints>
			<Flammability>1.0</Flammability>
		</statBases>		
		<costList>      
			<WoodLog>30</WoodLog>
		</costList>
		<size>(2,1)</size>
		<comps>
			<li Class="Kubouch.CompProperties_UniversalFermenter">
				<products>
					<li>
						<thingDef>DriedLeavesTobacco</thingDef>
						<ingredientFilter>
							<thingDefs>
								<li>TobaccoLeaves</li>
							</thingDefs>
						</ingredientFilter>
						<temperatureSafe>
							<min>0</min>
							<max>65</max>
						</temperatureSafe>
						<temperatureIdeal>
							<min>30</min>
							<max>50</max>
						</temperatureIdeal>
						<progressPerDegreePerTick>0.00001</progressPerDegreePerTick>
						<baseFermentationDuration>240000</baseFermentationDuration>
						<maxCapacity>25</maxCapacity>
						<speedLessThanSafe>0.05</speedLessThanSafe>
						<speedMoreThanSafe>0.8</speedMoreThanSafe>
						<efficiency>1</efficiency>
						<sunRespect>
							<min>0.75</min>
							<max>1.2</max>
						</sunRespect>
						<rainRespect>
							<min>1</min>
							<max>0</max>
						</rainRespect>
						<snowRespect>
							<min>1</min>
							<max>0</max>
						</snowRespect>
						<windRespect>
							<min>1</min>
							<max>1.2</max>
						</windRespect>
						<graphSuffix>_tobacco</graphSuffix>
					</li>					
					<li>
						<thingDef>DriedLeavesSmokeleaf</thingDef>
						<ingredientFilter>
							<thingDefs>
								<li>SmokeleafLeaves</li>
							</thingDefs>
						</ingredientFilter>						
						<temperatureSafe>
							<min>0</min>
							<max>65</max>
						</temperatureSafe>
						<temperatureIdeal>
							<min>30</min>
							<max>50</max>
						</temperatureIdeal>
						<progressPerDegreePerTick>0.00001</progressPerDegreePerTick>
						<baseFermentationDuration>240000</baseFermentationDuration>
						<maxCapacity>25</maxCapacity>
						<speedLessThanSafe>0.05</speedLessThanSafe>
						<speedMoreThanSafe>0.8</speedMoreThanSafe>
						<efficiency>1</efficiency>
						<sunRespect>
							<min>0.75</min>
							<max>1.2</max>
						</sunRespect>
						<rainRespect>
							<min>1</min>
							<max>0</max>
						</rainRespect>
						<snowRespect>
							<min>1</min>
							<max>0</max>
						</snowRespect>
						<windRespect>
							<min>1</min>
							<max>1.2</max>
						</windRespect>
						<graphSuffix>_smokeleaf</graphSuffix>
					</li>
				</products>
			</li>
			<li Class="CompProperties_Forbiddable"/>
		</comps>
		<tickerType>Rare</tickerType>
		<rotatable>true</rotatable>
		<designationCategory>Production</designationCategory>
		<constructEffect>ConstructWood</constructEffect>    
